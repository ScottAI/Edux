@model Edux.Models.AppTenant
@{
    ViewData["Title"] = "Create";
}
<h2>Oluştur</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>AppTenant</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <label asp-for="Hostname" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Hostname" class="form-control" />
                <span asp-validation-for="Hostname" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <label asp-for="ThemeName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ThemeName" class="form-control" />
                <span asp-validation-for="ThemeName" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <label asp-for="ThemeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ThemeId" class="form-control" asp-items="ViewBag.ThemeId"><option value="">Seçiniz</option></select>
            </div>
            </div>
        <div class="form-group">
            <label asp-for="ConnectionString" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ConnectionString" class="form-control" />
                <span asp-validation-for="ConnectionString" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <label asp-for="Folder" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Folder" class="form-control" />
                <span asp-validation-for="Folder" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="RequireSSL" />
                    <label><input asp-for="RequireSSL" /> @Html.DisplayNameFor(model => model.RequireSSL)</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OwnerUserName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OwnerUserName" class="form-control" />
                <span asp-validation-for="OwnerUserName" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <label asp-for="TrialEndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TrialEndDate" class="form-control" />
                <span asp-validation-for="TrialEndDate" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <label asp-for="CreateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </div>
        </div>
</form>
 
<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
