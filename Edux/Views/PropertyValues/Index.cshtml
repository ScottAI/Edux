@model IEnumerable<Edux.Models.PropertyValue>

@{
    ViewData["Title"] = "Özellik Değerleri";
}

<h2>Özellik Değerleri</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Oluştur</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
                <th class="text-nowrap all">
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th class="text-nowrap ">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th >
                <th class="text-nowrap ">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
                <th class="text-nowrap ">
                    @Html.DisplayNameFor(model => model.AppTenantId)
                </th>
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.Entity)
            </th>
            <th class="text-nowrap ">
                @Html.DisplayNameFor(model => model.Property)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppTenantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entity.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Ayrıntılar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
