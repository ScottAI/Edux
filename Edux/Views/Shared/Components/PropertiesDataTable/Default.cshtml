@model IEnumerable<Edux.Models.Property>

<p>
    <a asp-controller="Properties" asp-action="Create" class="btn btn-primary" asp-route-EntityId="@ViewBag.EntityId">Yeni Özellik Ekle</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsRequired)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.PropertyType)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.StringLength)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AppTenantId)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Entity)
            </th>
            <th data-orderable="false" class="text-nowrap all">
                Eylemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PropertyType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StringLength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppTenantId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Entity.Id)
                </td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-controller="Properties" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Details" asp-controller="Properties" asp-route-id="@item.Id" class="btn btn-success">Ayrıntılar</a>
                    <a asp-action="Delete" asp-controller="Properties" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
