@model IEnumerable<Edux.Models.Page>

@{
    ViewData["Title"] = "Sayfalar";
}

<h2>Sayfalar</h2>

<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table class="table table-striped table-hover dt-responsive" id="tblRecords">
    <thead>
        <tr>
                <th  class="text-nowrap all">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Slug)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.View)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.LayoutView)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.MetaTitle)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.MetaDescription)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.MetaKeywords)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.IsPublished)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.ViewCount)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.AllowedRoles)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.AppTenantId)
                </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ParentPage)
            </th>
            <th  data-orderable="false" class="all">Eylemler</th>
        </tr>   
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.View)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayoutView)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaKeywords)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllowedRoles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppTenantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentPage.Title)
            </td>
            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Ayrıntılar</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
