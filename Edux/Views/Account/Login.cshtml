<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="/metronic/layouts/layout/img/logo-login.png" style="height: 40px;" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <form asp-controller="Account" asp-action="Login">

            @Html.AntiForgeryToken()

            <h3 class="form-title">Yönetim Paneli Giriş</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> E-Posta Alanı Gereklidir. Şifre Alanı Gereklidir </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Kullanıcı Adı</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix", @placeholder = "Kullanıcı Adı" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Şifre</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control placeholder-no-fix", @placeholder = "Şifre" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


                </div>
            </div>
            <div class="form-actions">
                <label class="rememberme mt-checkbox mt-checkbox-outline">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)


                    <span></span>
                </label>

                <button type="submit" class="btn green pull-right" value="Giriş">Giriş</button>
            </div>

            <div class="forget-password">

                <p>
                    @Html.ActionLink("Şifrenizi mi unuttunuz?", "ForgotPassword")

                </p>
            </div>




        </form>
        <div class="col-md-4">

        </div>
    </div>
    <div class="copyright hide"> 2017 © CMSCORE.</div>
    <!-- END LOGIN -->
