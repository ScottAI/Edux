@model IEnumerable<Edux.Models.Component>

@{
    ViewData["Title"] = "Bileşenler";
}

<h2>Bileşenler</h2>

<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table class="table table-striped table-hover" id="tblRecords">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.View)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AppTenantId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ComponentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Form)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Page)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ParentComponent)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.View)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppTenantId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ComponentType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Form.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Page.Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ParentComponent.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
