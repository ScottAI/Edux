@model Edux.Models.Page

@{
    ViewData["Title"] = "Sayfalar Düzenle";
}

<h2>Düzenle</h2>
<ul class="nav nav-tabs">
    <li class="active">
        <a href="#tab_1_1" data-toggle="tab"> Sayfa </a>
    </li>
    <li>
        <a href="#tab_1_2" data-toggle="tab"> Bileşenler </a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade active in" id="tab_1_1">
        <form asp-action="Edit">
            <div class="form-horizontal">
  
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Slug" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Slug" class="form-control" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="View" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="View" class="form-control" />
                        <span asp-validation-for="View" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LayoutView" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="LayoutView" class="form-control" />
                        <span asp-validation-for="LayoutView" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ParentPageId" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="ParentPageId" class="form-control" asp-items="ViewBag.ParentPageId"><option value="">Seçiniz</option></select>
                        <span asp-validation-for="ParentPageId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MetaTitle" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="MetaTitle" class="form-control" />
                        <span asp-validation-for="MetaTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MetaDescription" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="MetaDescription" class="form-control" />
                        <span asp-validation-for="MetaDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MetaKeywords" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="MetaKeywords" class="form-control" />
                        <span asp-validation-for="MetaKeywords" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input asp-for="IsPublished" />
                            <label asp-for="IsPublished"></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ViewCount" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ViewCount" class="form-control" />
                        <span asp-validation-for="ViewCount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AppId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="AppId" class="form-control" asp-items="ViewBag.AppId">
                            <option value=""> Seçiniz..</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LanguageId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId">
                            <option value=""> Seçiniz..</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AllowedRoles" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="AllowedRoles" class="form-control" />
                        <span asp-validation-for="AllowedRoles" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="Id" />

                <input type="hidden" asp-for="CreateDate" class="form-control" />


                <input type="hidden" asp-for="CreatedBy" class="form-control" />


                <input type="hidden" asp-for="UpdateDate" class="form-control" />


                <input type="hidden" asp-for="UpdatedBy" class="form-control" />


                <input type="hidden" asp-for="AppTenantId" class="form-control" />

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="tab-pane fade" id="tab_1_2">
       @await Component.InvokeAsync("ComponentsDataTable", new { pageId = Model.Id })
    </div>
</div>
<br />
<br />
<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
