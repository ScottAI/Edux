@model Edux.Models.ComponentType

@{
    ViewData["Title"] = "Bileşen Türü Düzenle";
}
<h2>Düzenle</h2>
<ul class="nav nav-tabs">
    <li class="active">
        <a href="#tab_1_1" data-toggle="tab"> Bileşen Türleri </a>
    </li>
    <li>
        <a href="#tab_1_2" data-toggle="tab"> Özellikler </a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade active in" id="tab_1_1">
        <form asp-action="Edit">
            <div class="form-horizontal">
                <h4>Veri Tablosu Özellikler</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DisplayName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="DisplayName" class="form-control" />
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="Id" />


                <input asp-for="CreateDate" class="form-control" type="hidden" />
                <input asp-for="CreatedBy" class="form-control" type="hidden" />
                <input asp-for="UpdateDate" class="form-control" type="hidden" />
                <input asp-for="UpdatedBy" class="form-control" type="hidden" />
                <input asp-for="AppTenantId" class="form-control" type="hidden" />

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
        </div>
    <div class="tab-pane fade" id="tab_1_2">
        @await Component.InvokeAsync("ParametersDataTable", new { componenttypeId = Model.Id })
    </div>
    </div>
        <div>
            <a asp-action="Index">Listeye Geri Dön</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
