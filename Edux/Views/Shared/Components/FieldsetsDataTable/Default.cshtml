@model IEnumerable<Edux.Models.Fieldset>

<p>
<a asp-controller="FieldSets" asp-action="Create" class="btn btn-primary" asp-route-formId="@ViewBag.formId">Yeni Alan Kümesi Ekle</a>
</p>
<table class="table table-striped table-hover dt-responsive" id="tblRecords" width="100%">
                          <thead>
                              <tr>
                                  <th class="text-nowrap all">
                                      @Html.DisplayNameFor(model => model.DisplayName)
                                  </th>
                                  <th class="text-nowrap ">
                                      @Html.DisplayNameFor(model => model.CssClass)
                                  </th>
                                  <th class="text-nowrap ">
                                      @Html.DisplayNameFor(model => model.Position)
                                  </th>
                               
                                  <th class="text-nowrap ">
                                      @Html.DisplayNameFor(model => model.Form)
                                  </th>
                                  <th data-orderable="false" class="all">Eylemler</th>
                              </tr>
                          </thead>
                          <tbody>
                              @foreach (var item in Model)
                              {
                                  <tr>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.DisplayName)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.CssClass)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Position)
                                      </td>
                                     
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Form.Id)
                                      </td>
                                      <td>
                                          <a asp-action="Edit" asp-controller="Fieldsets" asp-route-id="@item.Id" class="btn btn-primary ">Düzenle</a>
                                          <a asp-action="Details" asp-controller="Fieldsets" asp-route-id="@item.Id" class="btn btn-success">Detaylar</a>
                                          <a asp-action="Delete" asp-controller="Fieldsets" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                                      </td>
                                  </tr>
                              }
                          </tbody>
                      </table>
