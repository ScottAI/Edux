@model Edux.Models.Function

@{
    ViewData["Title"] = "Yeni İşlev";
}

<h2>Oluştur</h2>

        <form asp-action="Create">
            <div class="form-horizontal">
                <h4>İşlev</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Code"class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label asp-for="IsAnonymous" control-label">
                                <input asp-for="IsAnonymous" /> @Html.DisplayNameFor(model => model.IsAnonymous)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AllowedRoles" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="AllowedRoles" class="form-control" />
                        <span asp-validation-for="AllowedRoles" class="text-danger"></span>
                    </div>
                </div>
            
                    <input asp-for="CreateDate" class="form-control" type="hidden" />
               
                    <input asp-for="CreatedBy" class="form-control" type="hidden" />
                
                    <input asp-for="UpdateDate" class="form-control"  type="hidden"/>
            
                    <input asp-for="UpdatedBy" class="form-control"type="hidden" />
               
                    <input asp-for="AppTenantId" class="form-control" type="hidden" />
       
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Oluştur" class="btn btn-primary" />
                    </div>
                </div>
           </div>
</form>
 

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
