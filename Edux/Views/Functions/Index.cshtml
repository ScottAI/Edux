@model IEnumerable<Edux.Models.Function>

@{
    ViewData["Title"] = "İşlev";
}

<h2>İşlev</h2>

<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table id="tblRecords" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
         
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.IsAnonymous)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.AllowedRoles)
            </th>
          
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
           
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.IsAnonymous)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllowedRoles)
                </td>
             
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
             
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Ayrıntılar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
