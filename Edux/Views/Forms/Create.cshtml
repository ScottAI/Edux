@model Edux.Models.Form

@{
    ViewData["Title"] = "Yeni Formlar";
}

<h2>Oluştur</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Form</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DisplayName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EntityId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="EntityId" class="form-control" asp-items="ViewBag.Entities"></select>
                <span asp-validation-for="EntityId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Scripts" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Scripts" class="form-control"></textarea>
                <span asp-validation-for="Scripts" class="text-danger"></span>
            </div>
            </div>

            <input asp-for="CreateDate" class="form-control" type="hidden" />
            <input asp-for="CreatedBy" class="form-control" type="hidden" />
            <input asp-for="UpdateDate" class="form-control" type="hidden" />
            <input asp-for="UpdatedBy" class="form-control" type="hidden" />
            <input asp-for="AppTenantId" class="form-control" type="hidden" />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                </div>
            </div>
        </div>
</form>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
