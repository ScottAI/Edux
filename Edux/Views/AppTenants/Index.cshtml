@model IEnumerable<Edux.Models.AppTenant>

@{
    ViewData["Title"] = "AppTenants";
}

<h2>AppTenant</h2>

<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table class="table table-striped table-hover" id="tblRecords">
    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Hostname)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ThemeName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Folder)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.RequireSSL)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.OwnerUserName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.TrialEndDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hostname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThemeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Folder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequireSSL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrialEndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Theme.CreatedBy)
                </td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.AppTenantId" class="btn btn-primary ">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.AppTenantId" class="btn btn-success">Ayrıntılar</a>
                    <a asp-action="Delete" asp-route-id="@item.AppTenantId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
