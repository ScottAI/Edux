@model Edux.Models.ParameterValue

@{
    ViewData["Title"] = "Yeni Parametre Değerleri";
}

<h2>Oluştur</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Parametre Değeri</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Value" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ComponentId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ComponentId" class ="form-control" asp-items="ViewBag.ComponentId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ParameterId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ParameterId" class ="form-control" asp-items="ViewBag.ComponentId"></select>
            </div>
        </div>

        <input asp-for="CreateDate" class="form-control" type="hidden" />
        <input asp-for="CreatedBy" class="form-control" type="hidden" />
        <input asp-for="UpdateDate" class="form-control" type="hidden" />
        <input asp-for="UpdatedBy" class="form-control" type="hidden" />
        <input asp-for="AppTenantId" class="form-control" type="hidden" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
