@model IEnumerable<Edux.Models.Column>

    @{
    ViewData["Title"] = "Sütun";
    }

    <h2>Sütunlar</h2>

    <p>
        <a asp-action="Create" asp-controller="Columns" >Yeni Oluştur</a>
    </p>
    <table class="table table-striped table-hover dt-responsive" id="tblRecords" width="100%">
        <thead>
            <tr>
                <th class="text-nowrap all">
                    @Html.DisplayNameFor(model => model.Property)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.OrderBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.FilterOperator)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.FilterValue)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.AppTenantId)
                </th>
                <th class="text-nowrap">
                    @Html.DisplayNameFor(model => model.DataTable)
                </th>
                <th data-orderable="false" class="all">Eylemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Property.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FilterOperator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FilterValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppTenantId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataTable.Name)
                    </td>
                    <td class="text-nowrap">
                        <a asp-action="Edit" asp-controller="Columns" asp-route-id="@item.Id" class="btn btn-primary ">Düzenle</a>
                        <a asp-action="Details" asp-controller="Columns"  asp-route-id="@item.Id" class="btn btn-success">Ayrıntılar</a>
                        <a asp-action="Delete" asp-controller="Columns"  asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
